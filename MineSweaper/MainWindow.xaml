<Window x:Class="MineSweaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineSweaper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid x:Name="screen">
        <Menu x:Name="menubar" Height="20" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <MenuItem x:Name="menu_game" Header="Game">
                <MenuItem x:Name="menu_item_newGame" Header="새 게임" Click="NewGame_Click"/>
                <MenuItem x:Name="menu_item_help" Header="설정" Click="SetUp_Click"/>
            </MenuItem>
            <MenuItem x:Name="menu_help" Header="Help"></MenuItem>
        </Menu>
        <Grid x:Name="panel" Height="150" Margin="0,20,0,0" VerticalAlignment="Top">
            <Image HorizontalAlignment="Left" Height="100" Margin="19,24,0,0" VerticalAlignment="Top" Width="100" Source="Smile1.ico"/>
        </Grid>
        <UniformGrid x:Name="play_board" Margin="10,150,10,10" />
    </Grid>
</Window>
